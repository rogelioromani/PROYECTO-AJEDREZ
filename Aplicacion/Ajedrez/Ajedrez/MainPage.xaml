            <Rectangle Grid.Row="1" Grid.Column="5" Fill="#FF10CFEE" />
            <Rectangle Grid.Row="1" Grid.Column="7" Fill="#FF10CFEE" />

            <Rectangle Grid.Row="2" Grid.Column="0" Fill="#FF10CFEE" />
