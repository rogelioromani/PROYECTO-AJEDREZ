			<Rectangle Grid.Row="0" Grid.Column="2" Fill="#FF10CFEE" />
			<Rectangle Grid.Row="0" Grid.Column="4" Fill="#FF10CFEE" />
			<Rectangle Grid.Row="0" Grid.Column="6" Fill="#FF10CFEE" />

			<Rectangle Grid.Row="0" Grid.Column="1" Fill="#FF7AF78B" />
